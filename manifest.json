{
  "name": "Google News Section Hider",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Hides sections from Google News",
  "homepage_url": "http://sarcasmic.net",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "https://news.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://news.google.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}